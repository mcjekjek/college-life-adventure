#include <stdio.h>
int main () {

int q1, q2, q3;
float price1, price2, price3, total;
float cost1, cost2, cost3;
printf("\nInput product and price: ");
scanf("%d %f", &q1, &price1);

cost1= q1 * price1;

printf("\nInput product and price: ");
scanf("%d %f", &q2, &price2);

cost2= q2 * price2;

printf("\nInput product and price: ");
scanf("%d %f", &q3, &price3);

cost3= q3 * price3;

total= cost1 + cost2 + cost3;

printf("\nThis is the cost for product 1: %.2f", cost1);
printf("\nThis is the cost for product 2: %.2f", cost2);
printf("\nThis is the cost for product 3: %.2f", cost3);
printf("\nThis is your total cost: %.2f", total);

return 0;

}

