#include <stdio.h>

void percent_grade(int grade, int score2, int score3);

int main () {
    int score1;
    int score2;
    int score3;
    int total_score;
    int grade;
    
    
    printf("\nInput score #1 between 0 and 100: "); 
    scanf("%d",&score1);
    
    printf("\nInput score #2 between 0 and 100: "); 
    scanf("%d",&score2);
    
    printf("\nInput score #3 between 0 and 100: "); 
    scanf("%d",&score3);
    
    total_score = (score1 + score2 + score3) / 3;
    grade = total_score;
    
    
    percent_grade(grade, score2, score3);
    
    return 0;
    
}


void percent_grade(int grade, int score2, int score3) {

if (grade >= 90) {
printf("\ngrade = A");
}
else if (grade >= 70 && grade <90) {
printf("\ngrade = B");
}

else if (grade >= 50 && grade < 70) {
    if ((score2 + score3) /2 > 70 ) {
printf("\n grade = C ");
}
else {
printf("\n grade = D");
}
} else 
printf("\ngrade = F");
}



