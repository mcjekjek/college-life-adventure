#include <stdio.h>
int main() {
const float pi = 3.14;
int radius;
float area, circumference;


printf("Enter the radius of a cirle: ");
scanf("%d", &radius);

area= pi * (radius * radius);
circumference= 2 * pi * radius;

printf("\nThis is the area: %.2f", area);
printf("\nThis is the circumference: %.2f", circumference);


return 0;

}

